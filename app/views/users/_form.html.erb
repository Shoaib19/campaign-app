<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="field form-floating mb-3">
    <%= f.text_field :username , disabled:true  ,id:"floatingInput",class:"form-control", placeholder:"aa"%>
    <%= f.label :username , for:"floatingInput"%>
  </div>

  <div class="field form-floating mb-3">
    <%= f.email_field :email,  disabled:true ,id:"floatingInput",class:"form-control", placeholder:"aa"%>
    <%= f.label :email , for:"floatingInput"%><br />

  <div class="field form-floating mb-3">
    <%= f.select :user_type, options_for_select([["Novice","novice"],["Expert","expert"]],user.user_type) , class:"form-select form-select-sm"%>
  </div>

  <div class="field form-floating mb-3">
    <%= f.text_field :profession ,id:"floatingInput",class:"form-control", placeholder:"aa"%>
     <%= f.label :profession , for:"floatingInput"%>
  </div>

<div class="field form-floating mb-3">
     <%= f.select :status, options_for_select([["Not Qualified","not qualified"],["Qualified","qualified"],["Banned","banned"]]), class:"form-select form-select-sm" %>
  </div>
  
  <div class="field form-floating mb-3">
    <%= f.text_field :service ,id:"floatingInput",class:"form-control", placeholder:"aa"%>
     <%= f.label :service , for:"floatingInput"%>
  </div>

  <div class="actions">
    <%= f.submit class:"btn btn-outline-info" %>
  </div>
<% end %>
