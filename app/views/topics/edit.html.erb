<h1>Editing Topic</h1>

<%= form_for @topic do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-floating mb-3">
    <%= f.text_field :title , id:"floatingInput",class:"form-control", placeholder:"aa"%>
    <%= f.label :title ,for:"floatingInput"%>
  </div>
   
   <div class="field form-floating mb-3">
    <%= f.text_field :user_id, value: current_user.id, hidden:true,  id:"floatingInput",class:"form-control", placeholder:"aa" %>
  </div>

  <div class="field form-floating mb-3">
    <%= f.text_field :campaign_tab_id, value: @topic.campaign_tab_id, hidden:true, id:"floatingInput",class:"form-control", placeholder:"aa" %>
  </div>

  <div class="actions">
    <%= f.submit class:"btn btn-outline-warning"%>
  </div>
<% end %>

<br>

<%= link_to 'Show', @topic , class:"btn btn-outline-info" %> 
<%= link_to 'Back', campaign_tab_path(@topic.campaign_tab_id), class:"btn btn-outline-secondary" %>
