<p id="notice"><%= notice %></p>

<div class="card" style="width: 20rem;">
  <div class="card-body">
    <h5 class="card-title">
    <strong>Title:</strong>
  <%= @topic.title %>
    </h5>
<%= link_to 'Comment', new_comment_path(item:@topic,from_model: "topic"), class:"btn btn-outline-warning btn-sm " %> 
<% if get_user(@topic)%>
<%= link_to 'Edit', edit_topic_path(@topic) ,class:"btn btn-outline-secondary btn-sm " %> 
<%= link_to 'Destroy', @topic, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm " %>
<%end%>
<%= link_to 'Back', campaign_tab_path(@topic.campaign_tab_id), class:"btn btn-outline-dark btn-sm " %> 
  </div>
</div>
<br>
<br>
<div class="buttons"><strong>Comments</strong><br></div>
<br><br>
<% arr = get_comments(@topic)%>
<% arr.each do |c|%>
<%=link_to  c.title, comment_path(c), class:"comment bg-light border buttons"%>
<br>
<%end%>